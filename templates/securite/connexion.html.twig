{% extends 'base.html.twig' %}

{% block body %}

<h1> Se connecter </h1>

<form action="{{ path('securite_connexion')}}" method="post">
    <div class="form-group">
        <input placeholder="Adresse email" id="username" required name="_username" type="text" class="form-control">
    </div>
    <div class="form-group">
        <input placeholder="Mot de passe" id="password" required name="_password" type="password" class="form-control">       
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success"> Connexion </button>       
    </div>
</form>


{{ form_start(form) }}
{{ form_row(form.email, {'label': 'E-mail', username_parameter: "login_form[username]", 'attr': {'placeholder': 'Adresse email'}}) }}
{{ form_row(form.motdepasse, {'label': 'Mot de passe', password_parameter: "login_form[password]" , 'attr': {'placeholder': 'Mot de passe'}}) }}
<button type="submit" class="btn btn-success"> Connexion </button>
{{ form_end(form) }}


{% endblock %}
